{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node", "@cloudflare/workers-types"],
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "drizzle.config.ts"]
}
