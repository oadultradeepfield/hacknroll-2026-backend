{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "lib": ["ESNext"],
    "paths": {
      "@/*": ["./src/*"],
    },
    "types": ["node"],
  },
  "include": ["src"],
}
